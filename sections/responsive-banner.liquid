<style>
  .spacer{
    padding-top: 15px;
    padding-bottom: 15px;
  }
  #responsive-banner-{{ section.id }} .banner-image {
    width: 100%;
    height: auto;
  }

  .desktop-banner { display: block; }
  .mobile-banner { display: none; }

  .banner-text-block {
    position: absolute;
    color: white;
    padding: 20px;
    max-width: 90%;
  }

  .banner-h1 {
    color: white;
    font-size: 2.5rem;
  }

  .top-left    { top: 20px; left: 20px; text-align: left; width: 367px; }
  .top-right   { top: 20px; right: 20px; text-align: left; width: 367px; }
  .center      { top: 50%; left: 50%; transform: translate(-50%, -50%); text-align: center; }
  .bottom-left { bottom: 30px; left: 20px; text-align: left; width: 367px; }
  .bottom-right{ bottom: 30px; right: 20px; text-align: left; width: 367px; }

  /* Mobile */
  @media screen and (max-width: 749px) {
    .desktop-banner { display: none; }
    .mobile-banner  { display: block; }

    .banner-text-block {
      background-color: black;
      position: static;
      display: table-cell;
      width: 100%;
      transform: none;
      text-align: center !important;
      padding: 30px;
    }

    .banner-h1 {
      font-size: 24px;
    }
  }
</style>


<div class="spacer">
<section id="responsive-banner-{{ section.id }}" class="responsive-banner">
  <div class="responsive-banner-wrapper">
    {% if section.settings.desktop_image %}
      <img
        src="{{ section.settings.desktop_image | image_url: width: 2000 }}"
        alt="Desktop Banner"
        class="banner-image desktop-banner"
        loading="lazy"
        width="{{ section.settings.desktop_image.width }}"
        height="{{ section.settings.desktop_image.height }}"
      >
    {% endif %}

    {% if section.settings.mobile_image %}
      <img
        src="{{ section.settings.mobile_image | image_url: width: 1000 }}"
        alt="Mobile Banner"
        class="banner-image mobile-banner"
        loading="lazy"
        width="{{ section.settings.mobile_image.width }}"
        height="{{ section.settings.mobile_image.height }}"
      >
    {% endif %}

    {% if section.settings.heading != blank %}
      <div class="banner-text-block {{ section.settings.text_position }}">
        <h1 class="banner-h1">{{ section.settings.heading }}</h1>
      </div>
    {% endif %}
  </div>
</section>
</div>

{% schema %}
{
  "name": "Responsive Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "desktop_image",
      "label": "Desktop Banner Image"
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Mobile Banner Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading Text",
      "default": "Your Banner Heading"
    },
    {
      "type": "select",
      "id": "text_position",
      "label": "Text Position",
      "options": [
        { "label": "Top Left", "value": "top-left" },
        { "label": "Top Right", "value": "top-right" },
        { "label": "Center", "value": "center" },
        { "label": "Bottom Left", "value": "bottom-left" },
        { "label": "Bottom Right", "value": "bottom-right" }
      ],
      "default": "center"
    }
  ],
  "blocks": [],
  "presets": [
    {
      "name": "Responsive Fullwidth Banner"
    }
  ]
}
{% endschema %}
