{{ 'component' | asset_url | stylesheet_tag }}

<div class="infinite-slideshow-wrapper">
  <slider-component class="slider-mobile-gutter{% if section.settings.auto_slide %} auto-slide{% endif %}" 
                    data-auto-slide="{{ section.settings.auto_slide }}"
                    data-slide-speed="{{ section.settings.slide_speed }}">
    <div class="slideshow" id="Slider-{{ section.id }}" role="region" aria-label="Slideshow">
      <div class="slideshow__slides">
        {% for block in section.blocks %}
          <div id="Slide-{{ section.id }}-{{ forloop.index }}" 
               class="slideshow__slide" 
               {{ block.shopify_attributes }}
               role="group" 
               aria-label="Slide {{ forloop.index }} of {{ section.blocks.size }}">
            
            {%- if block.settings.link -%}
              <a href="{{ block.settings.link }}" class="slideshow__slide-link">
            {%- endif -%}
            
            {%- if block.settings.desktop_image != blank or block.settings.mobile_image != blank -%}
              <div class="slideshow__media">
                {%- if block.settings.desktop_image != blank -%}
                  {{ block.settings.desktop_image | image_url: width: 2000 | image_tag: 
                     loading: 'lazy',
                     class: 'slideshow__image desktop-only',
                     widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840',
                     sizes: '100vw'
                  }}
                {%- endif -%}
                
                {%- if block.settings.mobile_image != blank -%}
                  {{ block.settings.mobile_image | image_url: width: 750 | image_tag: 
                     loading: 'lazy',
                     class: 'slideshow__image mobile-only',
                     widths: '375, 550, 750',
                     sizes: '100vw'
                  }}
                {%- elsif block.settings.desktop_image != blank -%}
                  {%- comment -%} Fallback to desktop image if no mobile image {%- endcomment -%}
                  {{ block.settings.desktop_image | image_url: width: 750 | image_tag: 
                     loading: 'lazy',
                     class: 'slideshow__image mobile-only',
                     widths: '375, 550, 750',
                     sizes: '100vw'
                  }}
                {%- endif -%}
              </div>
            {%- endif -%}
            
            {%- if block.settings.link -%}
              </a>
            {%- endif -%}
          </div>
        {% endfor %}
        
        {%- comment -%} Clone slides for seamless infinite loop {%- endcomment -%}
        {% for block in section.blocks %}
          <div class="slideshow__slide slideshow__slide--clone" aria-hidden="true">
            {%- if block.settings.link -%}
              <a href="{{ block.settings.link }}" class="slideshow__slide-link" tabindex="-1">
            {%- endif -%}
            
            {%- if block.settings.desktop_image != blank or block.settings.mobile_image != blank -%}
              <div class="slideshow__media">
                {%- if block.settings.desktop_image != blank -%}
                  {{ block.settings.desktop_image | image_url: width: 2000 | image_tag: 
                     loading: 'lazy',
                     class: 'slideshow__image desktop-only',
                     widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840',
                     sizes: '100vw'
                  }}
                {%- endif -%}
                
                {%- if block.settings.mobile_image != blank -%}
                  {{ block.settings.mobile_image | image_url: width: 750 | image_tag: 
                     loading: 'lazy',
                     class: 'slideshow__image mobile-only',
                     widths: '375, 550, 750',
                     sizes: '100vw'
                  }}
                {%- elsif block.settings.desktop_image != blank -%}
                  {{ block.settings.desktop_image | image_url: width: 750 | image_tag: 
                     loading: 'lazy',
                     class: 'slideshow__image mobile-only',
                     widths: '375, 550, 750',
                     sizes: '100vw'
                  }}
                {%- endif -%}
              </div>
            {%- endif -%}
            
            {%- if block.settings.link -%}
              </a>
            {%- endif -%}
          </div>
        {% endfor %}
      </div>
    </div>
    
    <div class="slideshow__controls">
      <button type="button" 
              class="slideshow__arrow slideshow__arrow--prev" 
              name="previous" 
              aria-label="Previous slide">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M15 18L9 12L15 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>
      
      <button type="button" 
              class="slideshow__arrow slideshow__arrow--next" 
              name="next" 
              aria-label="Next slide">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M9 18L15 12L9 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>
    </div>
  </slider-component>
</div>

<script src="{{ 'infinite-slider.js' | asset_url }}" defer="defer"></script>

{% schema %}
{
  "name": "Infinite Slideshow",
  "tag": "section",
  "class": "section-infinite-slideshow",
  "settings": [
    {
      "type": "checkbox",
      "id": "auto_slide",
      "label": "Enable auto-sliding",
      "default": true
    },
    {
      "type": "range",
      "id": "slide_speed",
      "min": 3,
      "max": 10,
      "step": 1,
      "unit": "s",
      "label": "Slide speed",
      "default": 5,
      "info": "Time between automatic slide transitions"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "desktop_image",
          "label": "Desktop Image"
        },
        {
          "type": "image_picker",
          "id": "mobile_image",
          "label": "Mobile Image",
          "info": "Optional. If not set, desktop image will be used."
        },
        {
          "type": "url",
          "id": "link",
          "label": "Slide Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Infinite Slideshow",
      "blocks": [
        {
          "type": "slide"
        },
        {
          "type": "slide"
        },
        {
          "type": "slide"
        }
      ]
    }
  ]
}
{% endschema %}
