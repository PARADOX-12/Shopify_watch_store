{% comment %}
Features & Benefits Section - Responsive
- Black background with white icons and text
- Centered both horizontally and vertically
- Fully responsive for mobile and desktop
- SVG icons via HTML input or image upload
{% endcomment %}

<style>
  .icons-row {
    background-color: #FFFF;
    padding-top: 30px;
    padding-bottom: 30px;
  }

  .icons-row__spacer{
    background-color: #000;
    
  }

  .icons-row__container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .icons-row__wrapper {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 30px;
    width: 100%;
  }

  .icons-row__item {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 10px;
  }

  .icons-row__icon-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 70px;
    height: 70px;
    margin-bottom: 15px;
  }

  .icons-row__icon {
    width: 100%;
    width: 70px;
    object-fit: contain;
    fill: white;
    display: block;
  }

  .icons-row__icon-image {
    width: 80px;
    height: 80px;
    object-fit: contain;
  }

  .icons-row__content {
    color: white;
    font-size: 14px;
    font-weight: 500;
    margin: 0;
    line-height: 1.5;
  }

  /* Mobile responsive */
  @media (max-width: 749px) {
    .icons-row {
      padding-top: 20px;
      padding-bottom: 20px;
    }

    .icons-row__wrapper {
      display: flex;
      flex-wrap: nowrap;
      justify-content: center;
      align-items: center;
      gap: 20px;
    }

    .icons-row__icon-wrapper {
      width: 40px;
      height: 40px;
      margin-bottom: 10px;
    }

    .icons-row__icon-image {
      width: 60px;
      height: 60px;
    }

    .icons-row__content {
      font-size: 10px;
    }
  }

  @media (max-width: 480px) {
    .icons-row {
      padding-top: 15px;
      padding-bottom: 15px;
    }

    .icons-row__wrapper {
      grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
      gap: 15px;
    }
    

    .icons-row__item {
      padding: 15px 10px;
    }
  }
</style>

<section class="icons-row" id="IconsRow-{{ section.id }}">
  <div class="icons-row__spacer">
  <div class="icons-row__container">
    <div class="icons-row__wrapper">
      {% for block in section.blocks %}
        <div class="icons-row__item" {{ block.shopify_attributes }}>
          <div class="icons-row__icon-wrapper">
            {% if block.settings.icon_type == 'svg' %}
              {% if block.settings.custom_svg != blank %}
                <div class="icons-row__icon">
                  {{ block.settings.custom_svg }}
                </div>
              {% endif %}
            {% elsif block.settings.icon_type == 'image' %}
              {% if block.settings.icon_image %}
                {{ block.settings.icon_image | image_url: width: 100 | image_tag: class: 'icons-row__icon-image', alt: block.settings.icon_image.alt }}
              {% endif %}
            {% endif %}
          </div>

          {% if block.settings.content %}
            <p class="icons-row__content">
              {{ block.settings.content }}
            </p>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
  </div>
</section>

{% schema %}
{
  "name": "Features & Benefits",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#000000"
    }
  ],
  "blocks": [
    {
      "type": "icon_item",
      "name": "Icon Item",
      "settings": [
        {
          "type": "select",
          "id": "icon_type",
          "label": "Icon type",
          "options": [
            { "value": "image", "label": "Upload Image" },
            { "value": "svg", "label": "SVG Code" }
          ],
          "default": "image"
        },
        {
          "type": "image_picker",
          "id": "icon_image",
          "label": "Icon image (PNG/JPG)"
        },
        {
          "type": "html",
          "id": "custom_svg",
          "label": "SVG code (paste full <svg> tag)"
        },
        {
          "type": "text",
          "id": "content",
          "label": "Text content",
          "default": "Icon text here"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Features & Benefits",
      "blocks": [
        {
          "type": "icon_item",
          "settings": {
            "content": "Shop from over 3000+ styles"
          }
        },
        {
          "type": "icon_item",
          "settings": {
            "content": "No Cost EMI above 7k"
          }
        },
        {
          "type": "icon_item",
          "settings": {
            "content": "COD available upto 25k"
          }
        },
        {
          "type": "icon_item",
          "settings": {
            "content": "10% off on 1st purchase"
          }
        },
        {
          "type": "icon_item",
          "settings": {
            "content": "Ship in 24 hours"
          }
        }
      ]
    }
  ]
}
{% endschema %}
